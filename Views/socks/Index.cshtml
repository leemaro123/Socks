@model MvcSocks.Models.SocksTypeViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Socks" asp-action="Index" method="get">

    <p>
        <select asp-for="SocksType" asp-items="Model.Types">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>

</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SocksS[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocksS[0].LaunchDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocksS[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocksS[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocksS[0].Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocksS[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SocksS[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SocksS)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LaunchDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
